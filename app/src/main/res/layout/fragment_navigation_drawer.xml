<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/userInfo"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/user_home_bg" />

            <!--<View-->
            <!--android:layout_width="53dp"-->
            <!--android:layout_height="53dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginLeft="14.5dp"-->
            <!--android:background="@drawable/navigation_user_sharow" />-->

            <RelativeLayout
                android:id="@+id/circleLayout"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <ImageView
                    android:id="@+id/circleIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/android_marshmallow" />

            </RelativeLayout>


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/circleLayout"
                android:text="Author:Nick"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:button="@null"
                    android:drawablePadding="15dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="17dp"
                    android:paddingRight="0dp"
                    android:text="我的项目"
                    android:textSize="17sp" />


            </RelativeLayout>

            <RadioButton
                android:id="@+id/radio1"

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:button="@null"
                android:drawablePadding="15dp"
                android:paddingLeft="17dp"
                android:paddingRight="0dp"
                android:text="我的任务"
                android:textSize="17sp" />

            <RadioButton

                android:id="@+id/radio2"
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:button="@null"
                android:drawablePadding="15dp"
                android:paddingLeft="17dp"
                android:paddingRight="0dp"

                android:text="冒泡"
                android:textSize="17sp" />

        </LinearLayout>
        </LinearLayout>


</ScrollView>