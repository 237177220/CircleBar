<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circle_progress="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_marginTop="20dp">

    <com.github.songnick.view.AccelerationProgress
        android:id="@+id/acc_progress_loading_complete"
        android:layout_width="100dp"
        android:layout_height="100dp"
        circle_progress:accBallBackground="@color/red_alpha_100"
        circle_progress:accBallRadius="4dp"
        circle_progress:bigCircleBackground="@color/red_alpha_30"
        circle_progress:bigCircleStroke="1dp"
        circle_progress:duration="1000"
        android:layout_centerHorizontal="true"/>
    <com.github.songnick.view.AccelerationProgress
        android:id="@+id/acc_progress_loading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        circle_progress:accBallBackground="@color/red_alpha_100"
        circle_progress:accBallRadius="4dp"
        circle_progress:bigCircleBackground="@color/red_alpha_30"
        circle_progress:bigCircleStroke="1dp"
        circle_progress:duration="1000"
        android:layout_below="@id/acc_progress_loading_complete"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <com.github.songnick.view.AccelerationProgress
        android:id="@+id/acc_progress_loading_time"
        android:layout_width="100dp"
        android:layout_height="100dp"
        circle_progress:accBallBackground="@color/red_alpha_100"
        circle_progress:accBallRadius="4dp"
        circle_progress:bigCircleBackground="@color/red_alpha_30"
        circle_progress:bigCircleStroke="1dp"
        circle_progress:timeTextSize="10sp"
        circle_progress:duration="10000"
        android:layout_below="@id/acc_progress_loading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
