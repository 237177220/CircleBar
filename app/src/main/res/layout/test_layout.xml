<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.github.songnick.viewgroup.SlideViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:marginLeftRight="50dp"
        app:gutterSize="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="ViewPager One"
            android:gravity="center"
            android:background="#FFBB33"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="ViewPager Two"
            android:gravity="center"
            android:background="#99CC00"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="ViewPager Three"
            android:gravity="center"
            android:background="#33b5e5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="ViewPager Four"
            android:gravity="center"
            android:background="#FFBB33"/>
    </com.github.songnick.viewgroup.SlideViewPager>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"></LinearLayout>
</LinearLayout>