<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circle_progress="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/darker_gray">

    <com.github.songnick.view.AccelerationProgress
        android:layout_width="100dp"
        android:layout_height="100dp"
        circle_progress:accBallBackground="@android:color/white"
        circle_progress:accBallRadius="4dp"
        circle_progress:bigCircleBackground="#b1ffffff"
        circle_progress:bigCircleStroke="1dp"
        circle_progress:duration="5000"/>



</RelativeLayout>
